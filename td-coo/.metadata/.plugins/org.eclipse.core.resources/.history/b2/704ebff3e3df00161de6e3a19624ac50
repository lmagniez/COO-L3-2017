package com.model;

public enum Symbole {
	ROND("o"),
	CROIX("x"),
	VIDE("");

	
	private final String symbol;
	private Symbole (String symbol) {
		this.symbol = symbol;
	}

	// getter traditionnel
	public String getSymbol() {
		  return symbol;
	}
	
	public static Symbole fromString(String text) {
	    if (text != null) {
	      for (Symbole b : Symbole.values()) {
	        if (text.equalsIgnoreCase(b.symbol)) {
	          return b;
	        }
	      }
	    }
	    return null;
	  }
}



