package balle;

import java.awt.Color;
import java.awt.Graphics;
import java.util.Random;

public class Balle {

	Fenetre f;
	
	protected int x;
	protected int y;
	protected int hx;
	protected int hy;
	protected int coefy;
	protected int coefx;
	protected int signex;
	protected int signey;
	
	
	
	
	public Balle(Fenetre f)
	{
		this.f=f;
		this.x=50;
		this.y=50;
		this.hx=30;
		this.hy=30;
		this.signex=1;
		this.signey=1;
		
		Random r = new Random();
		coefy= r.nextInt(5);
		coefx= r.nextInt(5);
		
	}
	
	public void updateBalle()
	{
		
		this.x+=coefx;
		this.y+=coefy;
		
		gestionCollision();
	}
	
	
	public void gestionCollision()
	{
		
		Random r = new Random();
		
		if(x>=f.getWidth()-hx)
		{
			signex=-signex;
			x=f.getWidth()-hx;
			coefx=r.nextInt(5)*signex;
			coefy=r.nextInt(5)*signey;
		}
		if(y>=f.getHeight()-hy)
		{
			signey=-signey;
			y=f.getWidth()-hy;
			coefx=r.nextInt(5)*signex;
			coefy=r.nextInt(5)*signey;
		}
		
		if(x<=0)
		{
			signex=-signex;
			x=0;
			coefx=r.nextInt(5)*signex;
			coefy=r.nextInt(5)*signey;
		}
		
		if(y<=0)
		{
			signey=-signey;
			y=0;
			coefx=r.nextInt(5)*signex;
			coefy=r.nextInt(5)*signey;
		}
			
	}
	
	public void paint(Graphics g) {
		f.paint(g);
		g.setColor(Color.GREEN);
        g.fillOval(this.x, this.y, this.hx, this.hy);

        f.validate();
		f.revalidate();
        f.repaint();
    }
	
}
